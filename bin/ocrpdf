#h: Usage: $0 [-o PDF] [-f FIRST-PAGE] [-l LAST-PAGE] [PDFS...]
#h:
#h: Get scanned or encrypted pdf and OCR it's text.
###
#shbuild:install bin/ocrpdf
ocrpdf() {
    local output_pdf="/tmp/ocr.pdf" first= last=
    ## Parse command line arguments.
    local OPTIND optopt= ops=
    while getopts "o:f:l:" optopt;do # OPTARG
        local ops="${ops}${optopt}"
        case $optopt in
            o)  local output_pdf="${OPTARG}" ;;
            f)  local first="${OPTARG}"      ;;
            l)  local last="${OPTARG}"       ;;
            \?) return 1;;
        esac
    done
    shift $(( $OPTIND - 1 ))
    if test -n "$1";then
        ## Split all pages.
        local num=0
        rm -rf /tmp/ocrpdf.1
        mkdir -p /tmp/ocrpdf.1
        for p in "$@";do
            ocrpdf_pdfsplit /tmp/ocrpdf.1 "${num}" "$1" "${first}" "${last}"
            local num="$(($num + 1))"
        done
        ## Convert to tif
        rm -rf /tmp/ocrpdf.2
        mkdir -p /tmp/ocrpdf.2
        for p in `find /tmp/ocrpdf.1 -iregex '.*\.pdf' | sort -g`;do
            ocrpdf_pdf2tif /tmp/ocrpdf.2 "${p}"
        done
        ## OCR to pdf.
        rm -rf /tmp/ocrpdf.3
        mkdir -p /tmp/ocrpdf.3
        for p in `find /tmp/ocrpdf.2 -iregex '.*\.tif' | sort -g`;do
            ocrpdf_tif2pdf /tmp/ocrpdf.3 "$p"
        done
        ## JOIN pdf.
        pdfconcat -o "/tmp/ocr.pdf" \
                  `find /tmp/ocrpdf.3 -iregex '.*\.pdf' | sort -g`
    fi
}
ocrpdf_tif2pdf() {
    local o="$1" f="$2"
    vrun tesseract -l spa "${f}" "${o}"/"`basename "${f}" .pdf.tif`" pdf
}
ocrpdf_pdf2tif() {
    local o="$1" f="$2"
    vrun /usr/bin/convert \
         -density 300     \
         "${f}"           \
         -colorspace Gray \
         -quality 100     \
         -alpha Off       \
         "${o}/`basename "${f}"`.tif"
}
ocrpdf_pdfsplit() {
    local o="$1" n="$2" f="$3" first="$4" last="$5"
    local args=
    mkdir -p $"{o}"
    if test -n "${first}";then
        local args="${args} -f ${first}"
    fi
    if test -n "${last}";then
        local args="${args} -l ${last}"
    fi
    
    vrun pdfseparate ${args} "${f}" "${o}/${n}-%04d.pdf"
}
## ----------------------------------------------------------------------------------------
tesseract_list_langs() {
    tesseract --list-langs
}





## ----------------------------------------------------------------------------------------
vrun() {
    echo "$*"
    "$@"
}


## ----------------------------------------------------------------------------------------
if test @"`basename "$0"`" = @"ocrpdf";then
    if test -n "$1";then
        ocrpdf "$@"
    else
        sed -n 's/^ *#h: \{0,1\}//p' "$0" | sed "s|\\\$0|`basename $0`|g"
        echo ""
        sed -n 's/^ *#l: \{0,2\}//p' "$0"
    fi
fi
